<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        tools:context=".covid">

    <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APA SIH COVID - 19 ?"
            android:fontFamily="@font/bloomer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="40dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tv2"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:text="COVID-19 ( CoronaVirus Disease-2019 ) adalah penyakit menular yang disebabkan oleh jenis coronavirus yang baru ditemukan. Ini merupakan virus baru dan penyakit yang tidak dikenal sebelum terjadi wabah di Wuhan, Tiongkok, bulan Desember 2019."
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:fontFamily="sans-serif-condensed-light"/>

    <ImageView
            android:layout_width="393dp"
            android:layout_height="244dp"
            android:src="@drawable/research"
            android:layout_below="@id/tv2"
            android:layout_marginTop="17dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"/>

    <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:background="@drawable/button"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:text="HOME"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
</RelativeLayout>