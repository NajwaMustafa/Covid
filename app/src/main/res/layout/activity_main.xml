<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVID - 19"
            android:fontFamily="@font/moonbrightdemo"
            android:textSize="100dp"
            android:textColor="@color/aliceblue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I N F O"
            android:fontFamily="@font/homenulishadow"
            android:textColor="@color/aliceblue"
            android:textSize="35dp"
            android:layout_marginTop="125dp"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/what"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:text="COVID-19"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/why"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:layout_below="@id/what"
            android:layout_centerHorizontal="true"
            android:text="GEJALA COVID-19"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/how"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:layout_below="@id/why"
            android:layout_centerHorizontal="true"
            android:text="PERLINDUNGAN DIRI"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/how2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:layout_below="@id/how"
            android:layout_centerHorizontal="true"
            android:text="PERLINDUNGAN ORANG LAIN"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/pasien"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:layout_below="@id/how2"
            android:layout_centerHorizontal="true"
            android:text="PASIEN"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>

    <ImageView
            android:layout_width="277dp"
            android:layout_height="232dp"
            android:src="@drawable/medical"
            android:layout_below="@id/how2"
            android:layout_marginTop="66dp"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>